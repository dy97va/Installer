<UserControl x:Class="Installer.View.InstallationDirectoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Installer.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Coose a path to intall" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 20 0 0" FontSize="40"></TextBlock>
        <TextBox Name="DirectoryTextBox" Width="400" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Browse" Click="PathSelectorClicked" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center"></Button>
        <Button Content="Confirm" Click="ConfirmInstallationButtonClicked" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center"></Button>
    </Grid>
</UserControl>
